{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
  <div class="container mt-4">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <h1>Edit User</h1>

        {{ form_start(form) }}

        <div class="form-group">
          {{ form_label(form.username, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.password, null, {'label_attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
          {{ form_label(form.languages, null, {'label_attr': {'class': 'form-label' }}) }}
          {{ form_widget(form.languages, {'attr': {'class': 'mb-3',  'multiple': 'multiple'}}) }}
        </div>
          

        <div class="form-group">
            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control mb-3'}}) }}
          </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-light" style="margin-left:69%" href="{{ path('app_user_index', {'id': user.id}) }}">Back to profile</a>

        {{ form_end(form) }}


        <hr>

        <form class="text-center" method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete your account?');">
          <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
