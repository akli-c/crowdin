{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="my-5 text-center">
            Salut, Hello, Salam, Hola {{ app.user.userIdentifier }} ! 
             <br><br>
             <a class="btn btn-danger" href="{{ path('app_logout') }}">Log out</a>
            <a class="btn btn-dark" href="user/{{ app.user.id }}">My profile</a>
            <a class="btn btn-light" href="projects">Projects</a>


        </div>
    {% else %}

    <h1 class="h3 mb-3 font-weight-normal titre_connexion"> Connectez-vous !</h1>
    <div class="page_connexion">
        <div class="form_connexion">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            <p class="b-subtext">New ? <a style="text-decoration:none"href="{{ path('app_user_new')}}" style="color: rgb(24, 76, 187);" >Join us </a></p>
 
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary sinscrire" type="submit" style="background-color: rgb(24, 76, 187);">Log In </button>
        </div>
        <div class="image_connexion"></div>

    </div>
        {%endif%}
</form>
{% endblock %}
