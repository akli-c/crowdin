{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
    <h1>Projects</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ project.nom }}</td>
            </tr>
            <tr>
                <th>Langue d'origine</th>
                <td>
                {% for language in project.langueOrigine %}
                        {{ language.language }}
                        {% if not loop.last %}, {% endif %}
                    {% endfor %}
                    {{ project.langueOrigine }}</td>
            </tr>
            <tr>
                <th>Sources</th>
                <td>{% for source in project.sources %}
                    {{ source.titre}}<br>
                {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_projects_index') }}">back to list</a>

    <a href="{{ path('app_projects_edit', {'id': project.id}) }}">edit</a>

    {{ include('projects/_delete_form.html.twig') }}
{% endblock %}
