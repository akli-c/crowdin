{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
    <h1>Projects</h1>

    <table class="table table-bordered">
        <tbody>

            <tr>
                <th>Project name</th>
                <td>{{ project.nom }}</td>
            </tr>
            <tr>
                <th>Original language</th>
                <td>{{project.langueOrigine}}</td>
            </tr>
            <tr>
                <th>Sources</th>
                <td>{% for source in project.sources %}
                    {{ source.titre}}<br>
                {% endfor %}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-light" href="{{ path('app_projects_index') }}">Back to list</a>

    <a class="btn btn-primary" href="{{ path('app_projects_edit', {'id': project.id}) }}">Edit</a>

    {{ include('projects/_delete_form.html.twig') }}
{% endblock %}
